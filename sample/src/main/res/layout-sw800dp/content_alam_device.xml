<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvDisplayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="@dimen/primary_text_size" />

        <TextView
            android:id="@+id/tVtemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="76.5F"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tVSensorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:padding="5dp"
        android:text="Level Sensor Calibrated"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tVLevelSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:padding="5dp"
        android:text="Level Sensor Calibrated"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/lLsensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/alarmLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVAlarmBellowlbl"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="7dp"
                android:text="@string/alarm_bellow"
                android:textColor="@color/black"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/tVAlarmAbovelbl"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="7dp"
                android:text="@string/alarm_above"
                android:textColor="@color/black"
                android:textSize="@dimen/primary_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVAlarmBellow"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edt_field_bg"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_down"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:hint=""
                android:maxLines="1"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/tVAlarmAbove"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/edt_field_bg"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_arrow_down"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:hint=""
                android:maxLines="1"
                android:padding="7dp"
                android:textColor="@color/black"
                android:textSize="@dimen/primary_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/tVAlarmInput"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/ic_arrow_down"
            android:elevation="1dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:padding="7dp"
            android:textColor="@color/black"
            android:textSize="@dimen/primary_text_size"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cBVoice"
                android:layout_width="0dp"
                android:layout_height="40dp"

                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textAllCaps="true"
                android:padding="7dp"
                android:text="@string/text"
                android:textSize="@dimen/primary_text_size" />

            <CheckBox
                android:id="@+id/cBSiren"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="7dp"
                android:text="@string/siren"
                android:textSize="@dimen/primary_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cBEmailAndText"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textAllCaps="true"
                android:padding="7dp"
                android:text="@string/emailadd"
                android:textSize="@dimen/primary_text_size" />


            <CheckBox
                android:id="@+id/cBRelay"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="7dp"
                android:text="@string/relay"
                android:textSize="@dimen/primary_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLTempUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tVCelcious"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/white_with_blue_border_left"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/Celcius"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tVFehrenheit"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/blue_right"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/Fehrenheit"
                android:textColor="@color/white" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="#B7B7B7" />

</LinearLayout>