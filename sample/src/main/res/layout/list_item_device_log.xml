<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/listItemDeviceLogRelative"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tVLBLevent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.80"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/event"
                android:textColor="@color/blue"
                android:textSize="@dimen/primary_text_size"/>

            <TextView
                android:id="@+id/tVEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.20"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="-----------"
                android:textColor="#000000"
                android:textSize="@dimen/primary_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tVLBLeventTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.80"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/event_time"
                android:textColor="@color/blue"
                android:textSize="@dimen/primary_text_size"/>

            <TextView
                android:id="@+id/tVEventTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.20"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="-----------"
                android:textColor="#000000"
                android:textSize="@dimen/primary_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:weightSum="3">

            <TextView
                android:id="@+id/tVLBLLogType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.80"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/log_type"
                android:textColor="@color/blue"
                android:textSize="@dimen/primary_text_size"/>

            <TextView
                android:id="@+id/tVLogType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.20"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="-----------"
                android:textColor="#000000"
                android:textSize="@dimen/primary_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tVLBMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.80"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/message"
                android:textColor="@color/blue"
                android:textSize="@dimen/primary_text_size"/>

            <TextView
                android:id="@+id/tVMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.20"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="-----------"
                android:textColor="#000000"
                android:textSize="@dimen/primary_text_size"/>

<!--android:maxLines="2"
  android:scrollbars="vertical"-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/tVLBTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.80"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="@string/to"
                android:textColor="@color/blue"
                android:textSize="@dimen/primary_text_size" />

            <TextView
                android:id="@+id/tVTo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2.20"
                android:drawablePadding="10dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="5dp"
                android:text="-----------"
                android:textColor="#000000"
                android:textSize="@dimen/primary_text_size" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_grey" />

</RelativeLayout>

